        <MudTextField
            @bind-Value="InputModel.Name"
            Label="Name"
            Variant="Variant.Outlined"
            MaxLength="100"
            Counter="100"
            Immediate="true"
            HelperText="Field required"
            For="@(() => InputModel.Name)"/>
    </Inputs>
</FormComponent>