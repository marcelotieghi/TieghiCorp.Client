@using TieghiCorp.UI.Component.Shared.Field

@inherits FormComponent<Core.Models.Department>

<FormComponent TModel="Core.Models.Department" Model="@InputModel" OnSaveSuccess="OnSaveSuccess">
    <Inputs>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField @bind-Value="InputModel.Name"
                              Label="Name"
                              Variant="Variant.Outlined"
                              MaxLength="100"
                              Counter="100"
                              Immediate="true"
                              HelperText="Field required"
                              For="@(() => InputModel.Name)" />
            </MudItem>
            <MudItem xs="12">
                <AutoCompleteComponent
                    TModel="Core.Models.Location"
                    Label="Locations"
                    Variant="Variant.Outlined"
                    SelectedItem="@InputModel.Location"
                    SelectedItemChanged="@((Core.Models.Location? l) => InputModel.Location = l)"
                    Validation="@(new Func<string, IEnumerable<string>>(Validate))"/>
            </MudItem>
        </MudGrid>
    </Inputs>
</FormComponent>

