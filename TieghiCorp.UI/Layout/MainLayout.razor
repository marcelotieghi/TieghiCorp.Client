@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudPopoverProvider />

<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   BackdropClick="false"
                   Position="DialogPosition.Center"
                   NoHeader="false"
                   CloseOnEscapeKey="false" />

<MudSnackbarProvider />

<MudLayout>
    <MudContainer>
        <Menu />
    </MudContainer>
       
    <MudMainContent Class="py-5">
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>